<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Content</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto mt-10">
    <%- include('partials/navigation') %>
  <h1 class="text-lg font-semibold mb-4">Select Content Type</h1>
  <% if (contentTypes.data) { %>
    <ul>
      <% contentTypes.data.forEach(function(type) { %>
        <li><a href="/content/<%= type.drupal_internal__type %>"><%= type.name %></a></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No content types available.</p>
  <% } %>
  </div>
</body>
</html>
